{  
  "name": "keywordhelper",  
  "version": "1.0.0",  
  "manifest_version":2,
  "description": "关键字搜索截图",  
  "browser_action": {  
    "default_icon": "favicon.ico" ,
    "default_title": "搜索截图",
    "default_popup": "popup.html"
  },

    "permissions":
    [
        "contextMenus", // 右键菜单
        "tabs", // 标签
        "notifications", // 通知
        "webRequest", // web请求
        "webRequestBlocking",
        "storage", // 插件本地存储
        "http://*/*", // 可以通过executeScript或者insertCSS访问的网站
        "https://*/*" // 可以通过executeScript或者insertCSS访问的网站
    ],
  "content_scripts": [
    {"js":["html2canvas.min.js","jquery-3.3.1.min.js","content-script.js"],"matches":["<all_urls>"]}
  ]
} 